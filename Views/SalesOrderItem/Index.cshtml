                        <label for="VAT" class="control-label">VAT</label>
                        <input id="VAT" name="VAT" type="number" step="0.01" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="RequestedQuantity" class="control-label">Requested Quantity</label>
                        <input id="RequestedQuantity" name="RequestedQuantity" type="number" class="form-control" required />
