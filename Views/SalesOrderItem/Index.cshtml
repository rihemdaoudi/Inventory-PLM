                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Designation</th>
                            <th>Product</th>
                            <th>Sales Order</th>
                            <th>Unit Price (Excl. Tax)</th>
                            <th>Unit Price (Incl. Tax)</th>
                            <th>VAT</th>
                            <th>Requested Quantity</th>
                            <th>Delivered Quantity</th>
                            <th>Total Amount</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.SalesOrderItems)
                        {
                            <tr>
                                <td>@item.Code</td>
                                <td>@item.Designation</td>
                                <td>@item.Product.Name</td>
                                <td>@item.SalesOrder.Code</td>
                                <td>@item.UnitPriceExclTax.ToString("C")</td>
                                <td>@item.UnitPriceInclTax.ToString("C")</td>
                                <td>@item.VAT.ToString("P")</td>
                                <td>@item.RequestedQuantity</td>
                                <td>@item.DeliveredQuantity</td>
                                <td>@item.TotalAmount.ToString("C")</td>
                                <td>
                                    <a href="javascript:void(0);"
                                       data-id="@item.ID"
                                       data-code="@item.Code"
                                       data-designation="@item.Designation"
                                       data-product-id="@item.Product.ID"
                                       data-sales-order-id="@item.SalesOrder.ID"
                                       data-unitpriceexcltax="@item.UnitPriceExclTax"
                                       data-unitpriceincltax="@item.UnitPriceInclTax"
                                       data-vat="@item.VAT"
                                       data-requestedquantity="@item.RequestedQuantity"
                                       data-deliveredquantity="@item.DeliveredQuantity"
                                       data-totalamount="@item.TotalAmount"
                                       class="editSalesOrderItem btn btn-primary btn-circle btn-sm"
                                       data-toggle="modal"
                                       data-target="#editSalesOrderItemModal">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="javascript:void(0);"
                                       data-id="@item.ID"
                                       class="deleteSalesOrderItem btn btn-danger btn-circle btn-sm"
                                       data-toggle="modal"
                                       data-target="#deleteSalesOrderItemModal">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Create Sales Order Item Modal -->
