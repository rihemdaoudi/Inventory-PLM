                <div class="form-group">
                    <label asp-for="Code" class="control-label"></label>
                    <input asp-for="Code" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="Designation" class="control-label"></label>
                    <input asp-for="Designation" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="UnitPriceExclTax" class="control-label"></label>
                    <input asp-for="UnitPriceExclTax" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="UnitPriceInclTax" class="control-label"></label>
                    <input asp-for="UnitPriceInclTax" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="VAT" class="control-label"></label>
                    <input asp-for="VAT" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="RequestedQuantity" class="control-label"></label>
                    <input asp-for="RequestedQuantity" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="DeliveredQuantity" class="control-label"></label>
                    <input asp-for="DeliveredQuantity" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="TotalAmount" class="control-label"></label>
                    <input asp-for="TotalAmount" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-danger" />
