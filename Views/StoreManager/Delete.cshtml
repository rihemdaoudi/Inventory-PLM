@model Inventory_PLM.Models.Product

@{
    ViewData["Title"] = "Delete Product";
    Layout = "~/Views/Shared/_StoreLayout.cshtml";
}

<h1 class="h3 mb-4 text-gray-800">Delete Product</h1>
<h4>Are you sure you want to delete this product?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category.Name</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>
        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="ID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="ProductManagement" class="btn btn-secondary">Cancel</a>
</form>
   
